/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  color: var(--text-color);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  background-color: var(--bg-color);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.theme-demo {
  width: 100%;
  max-width: 600rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: var(--text-color);
}

/* 主题切换按钮 */
.theme-switcher {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.theme-btn {
  padding: 20rpx 40rpx;
  border: 2rpx solid var(--border-color);
  background-color: var(--card-bg);
  color: var(--text-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.theme-btn.active {
  background-color: var(--primary-color);
  color: var(--button-text);
  border-color: var(--primary-color);
}

/* 卡片样式 */
.card {
  background-color: var(--card-bg);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.card-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  color: var(--text-color);
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.primary-btn {
  flex: 1;
  padding: 20rpx;
  background-color: var(--primary-color);
  color: var(--button-text);
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.secondary-btn {
  flex: 1;
  padding: 20rpx;
  background-color: var(--secondary-color);
  color: var(--button-text);
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 列表样式 */
.list {
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  overflow: hidden;
}

.list-item {
  padding: 24rpx;
  border-bottom: 2rpx solid var(--border-color);
  font-size: 28rpx;
  color: var(--text-color);
}

.list-item:last-child {
  border-bottom: none;
}

/* 信息卡片 */
.info-card {
  background-color: var(--card-bg);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 30rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: var(--text-color);
}

.info-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: var(--text-color);
  opacity: 0.8;
}

/* 自定义弹框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 600rpx;
  max-width: 90%;
  background-color: var(--card-bg);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-mask.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 2rpx solid var(--border-color);
  background-color: var(--card-bg);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-color);
  opacity: 0.6;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s ease;
}

.modal-close:active {
  opacity: 1;
}

.modal-body {
  padding: 40rpx;
  min-height: 120rpx;
}

.modal-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.modal-text:last-child {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 28rpx;
  border: none;
  border-radius: 0;
  background-color: transparent;
  color: var(--text-color);
  position: relative;
}

.modal-btn::after {
  border: none;
}

.modal-btn-cancel {
  color: var(--text-color);
  opacity: 0.8;
}

.modal-btn-cancel:active {
  background-color: var(--bg-color);
  opacity: 1;
}

.modal-btn-confirm {
  color: var(--button-text);
  background-color: var(--primary-color);
  font-weight: bold;
}

.modal-btn-confirm:active {
  opacity: 0.8;
}

.modal-btn:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: var(--border-color);
}
