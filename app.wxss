/**app.wxss**/
/* 定义CSS变量 - 默认浅色主题 */
page,
scroll-view {
  --bg-color: #ffffff;
  --text-color: #333333;
  --primary-color: #07c160;
  --secondary-color: #1989fa;
  --border-color: #e8e8e8;
  --card-bg: #f7f7f7;
  --button-bg: #07c160;
  --button-text: #ffffff;
}

/* 深色主题 */
page[data-theme="dark"],
scroll-view[data-theme="dark"] {
  --bg-color: #1a1a1a;
  --text-color: #e8e8e8;
  --primary-color: green;
  --secondary-color: blue;
  --border-color: #333333;
  --card-bg: #2a2a2a;
  --button-bg: #07c160;
  --button-text: #ffffff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
